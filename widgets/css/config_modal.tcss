ConnectionConfigModal {
    align: center middle;
    content-align: center middle;
}

#config-box {
    padding: 0 1;
    max-width: 60;
    max-height: 40;
    border: thick $background 80%;
    background: $surface;
}

ConfigParameter {
    layout: grid;
    grid-size: 3;
}

.config-input {
    column-span: 2;
    height: 100%;
    width: 100%;
}

.config-label {
    column-span: 1;
    height: 100%;
    width: 100%;
}

Button {
    width: 100%;
}
